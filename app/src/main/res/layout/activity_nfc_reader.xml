<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/fragment_container"
    tools:context="com.example.mayank.nfc.nfcreader.NfcReaderActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_view_read_tag"
                    android:paddingLeft="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="?actionBarSize"
                    android:text="Nfc Tag"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent" />

                <!--<Button-->
                    <!--android:layout_margin="16dp"-->
                    <!--android:textAppearance="@style/TextAppearance.AppCompat.Button"-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--style="?android:borderlessButtonStyle"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="?actionBarSize"-->
                    <!--android:id="@+id/go_to_dashboard"-->
                    <!--android:text="Back"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:onClick="backToMainActivity"-->
                    <!--tools:ignore="OnClick" />-->

                <EditText
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Nfc Id"
                    android:id="@+id/edit_text_nfc_tag"/>

                <Button
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textColor="@color/colorAccent"
                    style="?android:borderlessButtonStyle"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="?actionBarSize"
                    android:id="@+id/button_write_nfc_tag"
                    android:text="Create Nfc Id"
                    android:layout_marginTop="10dp"
                    android:onClick="writeNfcTag"
                    tools:ignore="OnClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_button"
                    android:text="CheckData"
                    android:onClick="checkData"
                    tools:ignore="OnClick" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>







</LinearLayout>
